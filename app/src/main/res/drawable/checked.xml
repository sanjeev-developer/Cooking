<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/black" />

                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

            <item
                android:width="4dp"
                android:height="1dp"
                android:top="12dp"
                android:left="6dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/black"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="9dp"
                android:height="1dp"
                android:top="10dp"
                android:left="8dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/black"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>
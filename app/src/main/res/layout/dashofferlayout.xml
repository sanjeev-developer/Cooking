<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/offer_ll"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/cardlayoutoffer"
        android:orientation="vertical"
        android:padding="7dp"
        android:weightSum="12">

        <ImageView
            android:id="@+id/img_offer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:scaleType="centerCrop"
            android:background="@drawable/rectangle_default" />

        <TextView
            android:id="@+id/txt_dash_offer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:fontFamily="sans-serif-medium"
            android:textSize="12dp"
            android:text="Granny's\nkitchen"
            android:textColor="@color/blacklight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@drawable/offerdashlayout"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:id="@+id/txt_best_disc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="Flat 25% Off"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
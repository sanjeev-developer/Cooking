<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent"
    tools:context="com.saavor.user.activity.FreeMeals">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_promotion"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay" >

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <!--<ImageView-->
                <!--android:id="@+id/tool_nav_meals"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:src="@drawable/navicon" />-->

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Promotions"
                android:textColor="@color/toolbargrey"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonback"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Have a Promo code?"
        android:textSize="18dp"
        android:textColor="@color/titlecolor"
        android:fontFamily="sans-serif-medium"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonback"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">


      <EditText
          android:textSize="17dp"
          android:fontFamily="sans-serif-medium"
          android:textColor="@color/blacklight"
          android:layout_marginLeft="15dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="Enter promo code"
          android:layout_weight="1" />


        <Button
            android:textSize="17sp"
            android:id="@+id/button2"
            android:background="@color/buttonback"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="apply" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonback"/>

</LinearLayout>


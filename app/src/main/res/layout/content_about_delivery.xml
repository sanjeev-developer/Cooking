<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:weightSum="1">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/tool_clear_delivery"
            android:visibility="gone"
            android:src="@drawable/ic_clear_black"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:text="About Delivery"
            android:textColor="@color/toolbargrey"
            android:textSize="22dp" />


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/darkgrey"
        android:text="Can you deliver food?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_yes_delivery"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="YES"
                android:layout_marginLeft="20dp"
                android:layout_weight=".9"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/img_yes_delivery"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/checkgreen" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/buttonback"/>

            <LinearLayout
                android:id="@+id/ll_no_delivery"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:weightSum="1"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="NO"
                    android:layout_marginLeft="20dp"
                    android:layout_weight=".9"
                    android:textColor="@color/black" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_no_delivery"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/checkgreen" />


            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_swap_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/darkgrey"
            android:layout_marginBottom="5dp"
            android:text="Would you like us to deliver instead?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/ll_yes_instead"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="YES"
                    android:layout_marginLeft="20dp"
                    android:layout_weight=".9"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/img_yes_instead"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/checkgreen" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/buttonback"/>

            <LinearLayout
                android:id="@+id/ll_no_instead"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:weightSum="1"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="NO"
                    android:layout_marginLeft="20dp"
                    android:layout_weight=".9"
                    android:textColor="@color/black" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_no_instead"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/checkgreen" />


            </LinearLayout>


        </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:maxLines="10"
                android:id="@+id/txt_term"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="please note: our premium delivery service might cost you additional 5% per order."
                android:textColor="@color/txtcolor"
                android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_swap_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<TextView
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:textSize="17dp"
    android:layout_marginBottom=".5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Delivery Criteria"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@color/white">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                   <EditText
                       android:id="@+id/edt_moa"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:digits="1234567.890"
                       android:maxLines="1"
                       android:maxLength="4"
                       android:inputType="textPersonName"
                       android:hint="Minimum Order Amount"/>
               </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_dc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="123456.7890"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:inputType="textPersonName"
                    android:hint="Delivery Charges"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_moaffd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="1234.567890"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:hint="Minimum Order Amount For Free Delivery"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/edt_adt"
                    android:textSize="19dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Delivery Time"/>


                        <Spinner
                            android:id="@+id/sp_time"
                            android:layout_width="match_parent"
                            android:layout_height="35dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkgrey"/>


                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please provide the radius of delivery service"
                android:textSize="17dp"
                android:textColor="@color/darkgrey"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="1">

                <SeekBar
                    android:id="@+id/seekBar_radius"
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/txt_radius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:gravity="left"
                    android:text="20 miles"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:id="@+id/but_deliver_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:background="@null"
                android:stateListAnimator="@null"
                android:drawableLeft="@drawable/arrow_left_black"
                android:text="Back"
                android:textSize="17dp" />

            <Button
                android:id="@+id/but_deliver_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:background="@null"
                android:stateListAnimator="@null"
                android:drawableRight="@drawable/arrow_right_blue"
                android:text="Next"
                android:textColor="@color/nextbutcolor"
                android:textSize="17dp" />

        </RelativeLayout>

        <Button
            android:textSize="20dp"
            android:textAllCaps="false"
            android:id="@+id/but_deliver_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:stateListAnimator="@null"
            android:background="@drawable/buttonback"
            android:text="Save &amp; Continue Later"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/but_rev_delivery_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:stateListAnimator="@null"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonback"
            android:text="save"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
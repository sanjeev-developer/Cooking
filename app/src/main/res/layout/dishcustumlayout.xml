<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="1">


            <TextView
                android:id="@+id/txt_add_on"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight=".7"
                android:gravity="center_vertical"
                android:text="Stuffed crust personalhhhjjjsjsjjsjsjsjsjjsjsjbhjhjbhjhjjhjhjhjhhhhhk"
                android:textColor="@color/blacklight2"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="end|center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/add_on_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="$10.00"
                    android:textColor="@color/nextbutcolor"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:id="@+id/img_add_tick"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/checkgreen"
                    android:visibility="invisible" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/buttonback"/>
    </LinearLayout>


</LinearLayout>
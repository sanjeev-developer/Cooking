<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chef_hut"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saavor.user.chefserver.ChefHutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/action_back"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/backicon" />

            <TextView
                android:id="@+id/txt_company_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/toolbargrey"
                android:textSize="18dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shadow" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_125"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_rating_xyz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_heart1_C"
                            android:layout_width="18dp"
                            android:layout_height="16dp"
                            android:src="@drawable/greyheart"
                            android:layout_marginLeft="20dp" />

                        <ImageView
                            android:src="@drawable/greyheart"
                            android:id="@+id/img_heart2_C"
                            android:layout_width="18dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp" />

                        <ImageView
                            android:src="@drawable/greyheart"
                            android:id="@+id/img_heart3_C"
                            android:layout_width="18dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp" />

                        <ImageView
                            android:src="@drawable/greyheart"
                            android:id="@+id/img_heart4_C"
                            android:layout_width="18dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp" />

                        <ImageView
                            android:src="@drawable/greyheart"
                            android:id="@+id/img_heart5_C"
                            android:layout_width="18dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_rating_xyz"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textColor="@color/blacklight"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txt_cuisines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_review"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/dp_12"
                        android:fontFamily="sans-serif-medium"
                        android:text=""
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/txt_services"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_cusines_kitchen"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/blacklight2"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/profilePicRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profilePicIv"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:layout_margin="@dimen/margin_10dp"
                            android:src="@drawable/usericonpd" />

                        <ProgressBar
                            android:id="@+id/imageLoader"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/buttonback" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bookings"
                    android:textAllCaps="true"
                    android:textColor="@color/nextbutcolor"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/txtBookings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/buttonback" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/buttonback" />

            <LinearLayout
                android:id="@+id/deliveryDetailsll"
                android:layout_width="match_parent"
                android:minHeight="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/delivey_fee_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txt_Address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/buttonback" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/buttonback" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/buttonback" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:text="Team"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:textSize="@dimen/dp_18"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/rv_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >


                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

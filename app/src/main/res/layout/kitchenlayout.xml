<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/ll_dishdetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Plain Rice"
                android:textColor="@color/blacklight"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Calories: " />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/dish_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Cost: " />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/dish_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5.00" />

            </LinearLayout>

            <TextView
                android:id="@+id/dish_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="Vegetarian"
                android:textColor="@color/blacklight"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_custom_avail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone"
                android:text="Customizations available"
                android:textColor="@color/nextbutcolor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_soldout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/chartback"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but_sub_dish"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:background="@drawable/buttonleftcurve"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:visibility="gone"
                  />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txt_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="ADD"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>


                <Button
                    android:id="@+id/but_add_dish"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:background="@drawable/buttonrightcurve"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/dish_left"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|top"
                android:text="10 Left"
                android:textColor="@color/accent" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonback" />

</LinearLayout>
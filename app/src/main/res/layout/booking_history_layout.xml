<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonback"/>


    <LinearLayout
        android:id="@+id/img_forward_oh"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_oh_kitname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taste Mania"
                android:textColor="@color/blacklight2"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_kitadd"
                android:layout_width="match_parent"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"
                android:text="Location" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking ID: " />

                        <TextView
                            android:id="@+id/txt_oh_orderid"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234HQ" />
                    </LinearLayout>



                    <TextView
                        android:id="@+id/txt_recent_dishprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$95.00"
                        android:textColor="@color/accent"/>


                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scheduled For: "
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/nextbutcolor"/>

                        <!--<TextView-->
                            <!--android:id="@+id/txt_oh_orderdate"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="May 19, 2017"-->
                            <!--android:textColor="@color/nextbutcolor"/>-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date: " />

                        <TextView
                            android:id="@+id/date_booking"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234HQ" />
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_statustxt"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status : "
                            android:textColor="@color/accent"/>

                        <TextView
                            android:id="@+id/txt_od_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Status"
                            android:textColor="@color/nextbutcolor"/>
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:gravity="end|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rightarrow"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_heart_rating"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="20dp"
                    android:src="@drawable/redreview"/>

                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="17dp"
                    android:layout_height="20dp"
                    android:src="@drawable/redreview"/>
                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="17dp"
                    android:layout_height="20dp"
                    android:src="@drawable/redreview"/>

                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="17dp"
                    android:layout_height="20dp"
                    android:src="@drawable/redreview"/>
                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="17dp"
                    android:layout_height="20dp"
                    android:src="@drawable/redreview"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_chefStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtChefStatus"
                android:layout_marginLeft="20dp"
                android:text="Chef Arrival"
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_buttongroup"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/oh_reorder"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:textAllCaps="false"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/greenbuttonlayout"
                android:text="Reorder"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <Button
                android:layout_marginBottom="@dimen/dp_10"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/but_order_status_history"
                android:textAllCaps="false"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/yellowbuttonlayout"
                android:text="Order Status"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="14dp" />



            <Button
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/but_order_cancel"
                android:layout_marginTop="5dp"
                android:background="@drawable/blackbuttonlayout"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Cancel"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/ll_reason"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason : "
                android:textColor="@color/accent"/>

            <TextView
                android:id="@+id/txt_reason_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Status"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/nextbutcolor"/>
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonback"/>
</LinearLayout>
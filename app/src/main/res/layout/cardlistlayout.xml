<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mode="same_level"
        app:dragEdge="right">

        <!-- Your secondary layout here -->
        <LinearLayout
            android:id="@+id/ll_swipe_delete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/accent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/delete_swipe"
                android:textSize="17sp" />


        </LinearLayout>

        <!-- Your main layout here -->
        <LinearLayout
            android:id="@+id/ll_card_details"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cardnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/titlecolor"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_cardtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mastercard"
                        android:layout_marginRight="18dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/nextbutcolor"
                        android:textSize="17sp" />


                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/buttonback" />

        </LinearLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>


    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/action_back"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="15"
                android:src="@drawable/backicon" />

            <TextView
                android:id="@+id/txt_kitchen_tool"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:singleLine="true"
                android:text="Cart"
                android:textColor="@color/toolbargrey"
                android:textSize="18dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:textColor="@color/toolbargrey"
                android:textSize="@dimen/dp_26" />

            <TextView
                android:id="@+id/txtActionBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/toolbargrey"
                android:textSize="@dimen/dp_26" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/buttonback"></View>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/lightnavgrey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:fontFamily="sans-serif-medium"
                        android:text="Booking Details"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvBookingDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/lightnavgrey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="Event Details"
                        android:textColor="@color/txtcolor"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18">


                    <TextView
                        android:id="@+id/txt_Events"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="Events"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp"></TextView>

                    <com.saavor.user.views.MaterialSpinner
                        android:id="@+id/sp_Events"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:visibility="gone"
                        app:ms_baseColor="@color/colorGray"
                        app:ms_hint="Select Event"
                        app:ms_hintColor="@color/colorSeparator"
                        app:ms_multiline="true"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center|right"
                        android:layout_marginTop="@dimen/dp_4"
                        android:src="@drawable/arrow_down" />
                </FrameLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_other_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_18"
                        android:background="@color/shadow"></View>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_18"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/other_event"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:gravity="center|left"
                            android:hint="Enter your event"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textCursorDrawable="@null"
                            android:textSize="15sp">

                        </EditText>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:background="@color/shadow"></View>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_no_guest"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:focusable="false"
                        android:gravity="center|left"
                        android:hint="Number of guests"
                        android:inputType="number"
                        android:singleLine="true"
                        android:maxLength="3"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp">

                    </EditText>
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:background="@color/shadow"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_45"
                            android:layout_weight="8"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_Address"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:ems="10"
                                android:focusable="false"
                                android:gravity="center|left"
                                android:hint="Address"
                                android:inputType="phone"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null"></EditText>
                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            android:layout_weight="2"
                            android:id="@+id/img_change_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_mode_edit_black_24dp"
                            android:padding="7dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_18"
                        android:layout_marginBottom="10dp"
                        android:background="@color/buttonback"></View>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/shadow"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/lightnavgrey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="Contact Person"
                        android:textColor="@color/txtcolor"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:focusable="false"
                        android:gravity="center|left"
                        android:hint="Full Name"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16">

                    </EditText>
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:background="@color/shadow"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtCountryCode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:gravity="bottom"
                            android:text="+1"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_contact_number"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@null"
                                android:focusable="false"
                                android:gravity="center|left"
                                android:hint="Contact Number"
                                android:inputType="number"
                                android:singleLine="true"
                                android:maxLength="14"
                                android:textCursorDrawable="@null"
                                android:textSize="15sp">

                            </EditText>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/buttonback"></View>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/buttonback"></View>

                <LinearLayout
                    android:id="@+id/ll_CartItems"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/buttonback"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:background="@color/lightnavgrey">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:text="Items in cart"
                            android:textColor="@color/txtcolor"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="@dimen/dp_16" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/buttonback"></View>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_items_in_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sp_18"
                        android:layout_marginRight="@dimen/sp_18">

                    </android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:background="@drawable/buttonback"
                        android:id="@+id/llEmptyCart"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Empty Cart"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />


                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llPromoCode"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/shadow"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:background="@color/lightnavgrey">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:text="Have a Promo code?"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/txtcolor"
                            android:textSize="@dimen/dp_16" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/buttonback"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:weightSum="10">



                            <EditText
                                android:layout_weight="8"
                                android:id="@+id/et_promo_code"
                                android:layout_marginLeft="20dp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:ems="10"
                                android:focusable="false"
                                android:gravity="center|left"
                                android:textSize="15sp"
                                android:hint="Enter promo code"
                                android:inputType="text"
                                android:maxLength="6"
                                android:singleLine="true"
                                android:textCursorDrawable="@null"></EditText>


                        <LinearLayout
                            android:id="@+id/llApplyPromoCode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/txtcolor"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="APPLY"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/buttonback"></View>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/shadow"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/lightnavgrey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="Select Tip amount"
                        android:textColor="@color/txtcolor"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/white">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCash"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:background="@drawable/filterback"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:text="Cash"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <Button
                            android:id="@+id/btn10Per"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:background="@drawable/filterback"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:text="10%"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sp_14" />

                        <Button
                            android:id="@+id/btn15Per"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:background="@drawable/filterback"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:text="15%"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sp_14" />

                        <Button
                            android:id="@+id/btn20Per"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:background="@drawable/filterback"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:text="20%"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sp_14" />


                        <Button
                            android:id="@+id/btnCustom"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginRight="@dimen/dp_15"
                            android:background="@drawable/filterback"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:text="Custom"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sp_14" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/lightnavgrey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="Bill Summary"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/llBillSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15">

                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">

                        <TextView
                            android:layout_marginLeft="@dimen/dp_18"
                            android:gravity="center|left"
                            android:text="Charges"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="@dimen/sp_16"
                            android:id="@+id/txtSummary"
                            android:textColor="@color/blacklight"
                            android:layout_width="0dp"
                            android:layout_weight="70"
                            android:layout_height="match_parent" />

                        <TextView
                            android:gravity="end"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/txtcolor"
                            android:textSize="@dimen/sp_16"
                            android:text="$30.00"
                            android:maxLength="11"
                            android:fontFamily="sans-serif-medium"
                            android:id="@+id/txtCookingCharges"
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/llServiceCharges"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">

                        <TextView
                            android:layout_marginLeft="@dimen/dp_18"
                            android:gravity="center|left"
                            android:text="Services Charges"
                            android:textSize="@dimen/sp_16"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="0dp"
                            android:layout_weight="70"
                            android:textColor="@color/blacklight"
                            android:layout_height="match_parent" />

                        <TextView
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:textColor="@color/txtcolor"
                            android:textSize="@dimen/sp_16"
                            android:text="$30.00"
                            android:id="@+id/txtServicesCharges"
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDiscount"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">

                        <TextView
                            android:id="@+id/txtDiscountText"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:gravity="center|left"
                            android:text="Discount"
                            android:textSize="@dimen/sp_16"
                            android:layout_width="0dp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_weight="70"
                            android:textColor="@color/blacklight"
                            android:layout_height="match_parent" />

                        <TextView
                            android:gravity="end"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/txtcolor"
                            android:textSize="@dimen/sp_16"
                            android:text="$30.00"
                            android:maxLength="11"
                            android:id="@+id/txtDiscount"
                            android:layout_width="0dp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_weight="30"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llSalesTax"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">

                        <TextView
                            android:id="@+id/txtSalesTaxValue"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:gravity="center|left"
                            android:text="Sales Tax"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="@dimen/sp_16"
                            android:layout_weight="70"
                            android:layout_width="0dp"
                            android:textColor="@color/blacklight"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_weight="30"
                            android:gravity="end"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/txtcolor"
                            android:textSize="@dimen/sp_16"
                            android:text="$30.00"
                            android:maxLength="11"
                            android:fontFamily="sans-serif-medium"
                            android:id="@+id/txtSalesTax"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/llTip"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">

                        <TextView
                            android:layout_marginLeft="@dimen/dp_18"
                            android:gravity="center|left"
                            android:text="Tip"
                            android:textSize="@dimen/sp_16"
                            android:layout_width="0dp"
                            android:textColor="@color/blacklight"
                            android:fontFamily="sans-serif-medium"
                            android:layout_weight="70"
                            android:layout_height="match_parent" />

                        <TextView
                            android:gravity="end"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/txtcolor"
                            android:textSize="@dimen/sp_16"
                            android:text="$0.0"
                            android:maxLength="11"
                            android:id="@+id/txtTip"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">

                        <TextView
                            android:layout_marginLeft="@dimen/dp_18"
                            android:gravity="center|left"
                            android:text="Total"
                            android:textSize="@dimen/sp_16"
                            android:layout_width="0dp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_weight="70"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="match_parent" />

                        <TextView
                            android:gravity="end"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/txtcolor"
                            android:textSize="@dimen/sp_16"
                            android:text="$0.0"
                            android:id="@+id/txtTotal"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="0dp"
                            android:maxLength="11"
                            android:layout_weight="30"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/lightnavgrey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="Cooking Instructions"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/txtcolor"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10">


                    <EditText
                        android:id="@+id/etCookingInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_10"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ.,"
                        android:maxLength="300"
                        android:textSize="15sp"
                        android:hint="Enter cooking instructions"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/buttonback"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:background="@color/lightnavgrey"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_payment_method"
                        style="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/buttonback"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="Select Payment Method"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp" />


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>

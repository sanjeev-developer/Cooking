<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <TextView
        android:id="@+id/add_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/titlecolor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonback" />

    <LinearLayout
        android:id="@+id/ll_selectable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_weight="9.5"
                    android:id="@+id/textView19"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Address"
                    android:gravity="bottom"
                    android:textColor="@color/accent"
                    android:textSize="17dp"
                    android:fontFamily="sans-serif-medium" />

                <!--<TextView-->
                    <!--android:id="@+id/txt_delete_add"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="20dp"-->
                    <!--android:text="Delete"-->
                    <!--android:gravity="end"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="17dp"-->
                    <!--android:textStyle="bold" />-->
                <!---->
                <ImageView
                    android:id="@+id/img_edit_add"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_mode_edit_black_24dp"/>


                <ImageView
                    android:id="@+id/txt_delete_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/deleteicon"/>



            </LinearLayout>



            <TextView
                android:id="@+id/txt_addbook_add1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="XYZ Kitchen"
                android:maxLines="1"
                android:textColor="@color/blacklight"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/txt_addbook_add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="XYZ Kitchen"
                android:textColor="@color/blacklight"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_addbook_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="XYZ Kitchen"
                android:textColor="@color/blacklight"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_addbook_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="XYZ Kitchen"
                android:textColor="@color/blacklight"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_addbook_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="XYZ Kitchen"
                    android:textColor="@color/blacklight"
                    android:textSize="14dp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Instructions"
                    android:textColor="@color/accent"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/txt_addbook_inst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/blacklight"
                    android:textSize="14dp" />

            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/buttonback" />
    </LinearLayout>
</LinearLayout>
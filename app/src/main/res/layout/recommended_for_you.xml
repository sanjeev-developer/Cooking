<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_parentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_155"
            android:layout_height="@dimen/dp_150"
            android:background="@drawable/deal_background"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/profilePicRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePicIv"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_margin="@dimen/margin_10dp"
                    android:src="@drawable/usericonpd" />

                <ProgressBar
                    android:id="@+id/imageLoader"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dummy"
                android:id="@+id/txtUserName"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="$0.0"
                android:textColor="@color/black"
                android:id="@+id/txtHourlyRate"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgRating1"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/greyheart" />

                <ImageView
                    android:id="@+id/imgRating2"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/greyheart" />

                <ImageView
                    android:id="@+id/imgRating3"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/greyheart" />

                <ImageView
                    android:id="@+id/imgRating4"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/greyheart" />

                <ImageView
                    android:id="@+id/imgRating5"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/greyheart" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
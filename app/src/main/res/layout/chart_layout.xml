<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight=".7"
                        android:id="@+id/txt_cart_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Plain Rice"
                        android:textSize="15sp"
                        android:textColor="@color/blacklight2"/>

                    <TextView
                        android:id="@+id/txt_tad"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:textColor="@color/blacklight2"
                        android:text="$18.00"/>

                </LinearLayout>


                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Quantity : "-->
                        <!--android:gravity="center_vertical" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/txt_cart_quantity"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Full plate"-->
                        <!--android:gravity="center_vertical" />-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:id="@+id/ll_addon"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add on: "
                        android:textColor="@color/nextbutcolor"
                        android:gravity="center_vertical" />

                    <TextView
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/nextbutcolor"
                        android:id="@+id/txt_addon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Onion , potato" />
                </LinearLayout>




                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">



              <LinearLayout
                  android:background="@drawable/chartback"
                  android:layout_width="wrap_content"
                  android:layout_height="27dp"
                  android:orientation="horizontal">

                  <Button
                      android:id="@+id/but_cart_sub"
                      android:layout_width="25dp"
                      android:layout_height="27dp"
                      android:text="-"
                      android:textSize="20dp"
                      android:textColor="@color/white"
                      android:background="@drawable/buttonleftcurve"
                      android:visibility="visible" />

                  <LinearLayout

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">



                      <TextView
                          android:textColor="@color/black"
                          android:id="@+id/txt_cart_count"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="5dp"
                          android:text="1"
                          android:layout_marginLeft="7dp"
                          android:layout_marginRight="7dp"
                          android:textSize="13sp" />

                  </LinearLayout>



                  <Button
                      android:background="@drawable/buttonrightcurve"
                      android:id="@+id/but_cart_add"
                      android:layout_width="25dp"
                      android:layout_height="27dp"
                      android:text="+"
                      android:textSize="20dp"
                      android:textColor="@color/white"/>
              </LinearLayout>

          </LinearLayout>




                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="X"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/txt_item_price"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="$13"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/buttonback"/>

</LinearLayout>
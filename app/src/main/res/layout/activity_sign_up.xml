<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.saavor.user.activity.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/tool_up_clear"
            android:src="@drawable/ic_clear_black"/>

        <TextView
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:text="Sign Up"
            android:textColor="@color/toolbargrey"
            android:textSize="17sp" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonback"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="Continue with"
                    android:textColor="@color/blacklight"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="25dp">

                    <LinearLayout
                        android:layout_weight=".5"
                        android:layout_width="0dp"
                        android:gravity="right"
                        android:layout_height="match_parent">

                        <ImageView
                           android:layout_marginRight="10dp"
                            android:id="@+id/but_signface_login"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/facebookicon" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight=".5"
                        android:layout_width="0dp"
                        android:gravity="left"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/but_signgoogle_login"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/googleplusicon" />

                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Or sign up using email"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/titlecolor"
                    android:layout_marginBottom="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/buttonback"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".7"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:weightSum="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/et_firstname"
                                    android:layout_width="280dp"
                                    android:layout_height="wrap_content"
                                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                    android:ems="10"
                                    android:hint="First Name"
                                    android:textSize="17sp"
                                    android:inputType="textPersonName"
                                    android:maxLength="20" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_mi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:ems="10"
                                android:hint="M.I"
                                android:textSize="17sp"
                                android:inputType="textPersonName"
                                android:maxLength="1" />
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                            android:ems="10"
                            android:hint="Last Name"
                            android:textSize="17sp"
                            android:inputType="textPersonName"
                            android:maxLength="20" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--<Spinner-->
                            <!--android:id="@+id/sp_country_code"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:gravity="bottom">-->

                        <!--</Spinner>-->

                        <EditText
                            android:layout_marginTop="10dp"
                            android:id="@+id/countrycodeEt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:editable="false"
                            android:text="+1"
                            android:textSize="17dp" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <EditText
                                android:layout_marginLeft="5dp"
                                android:id="@+id/et_mobileno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="1234567890"
                                android:hint="Mobile"
                                android:textSize="17sp"
                                android:inputType="phone"
                                android:maxLength="14" />
                        </android.support.design.widget.TextInputLayout>



                    </LinearLayout>



                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz@1234567890_.-@"
                            android:ems="10"
                            android:hint="Email"
                            android:textSize="17sp"
                            android:inputType="textEmailAddress" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleContentDescription="description"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/darkgrey">

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890~!@?,#:.$%^&amp;*()_+/*-+"
                            android:ems="10"
                            android:hint="Password"
                            android:textSize="17sp"
                            android:inputType="textPassword"
                            android:maxLength="16" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleContentDescription="description"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/darkgrey">

                        <EditText
                            android:id="@+id/et_confirmpassword"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890~!@#$%^&amp;*()_+/*-+"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:textSize="17sp"
                            android:maxLength="16" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <CheckBox
                            android:visibility="gone"
                            android:id="@+id/chk_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:button="@drawable/custom_checkbox" />
                        
                        <Button
                            android:layout_marginTop="2dp"
                            android:id="@+id/check_but"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/dselected"/>

                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/tv_agreement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/buttonback"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_signupsubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/buttonback"
                        android:stateListAnimator="@null"
                        android:text="Sign Up"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Already a member?"
                            android:layout_weight=".6"
                            android:gravity="right"
                            android:textColor="@color/blacklight"
                            android:layout_marginBottom="20dp"/>

                        <TextView
                            android:id="@+id/tv_already"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Sign In"
                            android:layout_weight=".4"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:textColor="@color/toolbargrey"
                            android:layout_marginBottom="20dp"/>

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

        </ScrollView>


    </LinearLayout>
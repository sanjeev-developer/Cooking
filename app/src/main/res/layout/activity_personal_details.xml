<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_refone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:id="@+id/tool_back_pd"
            android:src="@drawable/backicon"/>

        <TextView
            android:fontFamily="sans-serif-medium"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:text="Personal Details"
            android:textColor="@color/toolbargrey"
            android:textSize="18dp" />

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonback"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Please fill the details"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/titlecolor"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/buttonback"/>

            <LinearLayout
                android:background="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<ImageView-->
                    <!--android:id="@+id/img_user_pd"-->
                    <!--android:layout_width="90dp"-->
                    <!--android:layout_height="90dp"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:gravity="center"-->
                    <!--android:src="@drawable/usericonpd"/>-->

                <FrameLayout
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_user_pd"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/usericonpd"
                        app:civ_border_color="#FFFF"
                        app:civ_border_width="2dp" />

                    <ProgressBar
                        android:id="@+id/progressBar_personaldetails"
                        android:layout_width="97dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_height="match_parent" />

                </FrameLayout>



                <Button
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"
                    android:id="@+id/img_upload_pic"
                    style="?android:textAppearanceSmall"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonback"
                    android:text="Add Profile Picture"
                    android:textColor="@color/white"
                     />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_marginLeft="5dp"
                                android:focusable="false"
                                android:id="@+id/et_firstname_pd"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:ems="10"
                                android:hint="First name"
                                android:inputType="textPersonName"
                                android:maxLength="20" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:focusable="false"
                            android:id="@+id/et_mi_pd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                            android:ems="10"
                            android:hint="M.I"
                            android:inputType="textPersonName"
                            android:maxLength="1" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_marginLeft="5dp"
                        android:focusable="false"
                        android:id="@+id/et_lastname_pd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                        android:ems="10"
                        android:hint="Last name"
                        android:inputType="textPersonName"
                        android:maxLength="20" />
                </android.support.design.widget.TextInputLayout>


                <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->


                    <!--<EditText-->
                        <!--android:focusable="false"-->
                        <!--android:id="@+id/et_mobileno_pd"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:digits="1234567890"-->
                        <!--android:hint="Mobile"-->
                        <!--android:inputType="phone"-->
                        <!--android:maxLength="14" />-->
                <!--</android.support.design.widget.TextInputLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:layout_marginLeft="7dp"
                        android:id="@+id/countrycodepd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:editable="false"
                        android:text="+1"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:textSize="17sp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_marginLeft="5dp"
                            android:id="@+id/et_mobileno_pd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="1234567890"
                            android:hint="Mobile"
                            android:textSize="18sp"
                            android:inputType="phone"
                            android:maxLength="14" />
                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textColor="@color/lightgrey"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_static_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="16.5dp" />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/lightgrey">


                </View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Date of Birth"
                    android:textColor="@color/lightgrey"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_selectdate_pd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="Select Date"
                    android:textColor="@color/black"
                    android:textSize="16.5dp" />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/lightgrey">


                </View>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/buttonback"/>

                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/btn_save_pd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonback"
                    android:stateListAnimator="@null"
                    android:text="Save"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_cancel_pd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/blacklight"
                    android:textSize="20dp" />

            </LinearLayout>

    </ScrollView>

    </LinearLayout>

